<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LifeBalance.UI.Countdown.AddNewCountdownActivity">

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/checkBox_importantcountdown"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/countdownname"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView11"/>
    <TextView
            android:text="天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/countdownname"
            app:layout_constraintStart_toStartOf="@+id/textView11" app:layout_constraintEnd_toEndOf="@+id/textView11"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/countdown_days" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/countdownname"
            app:layout_constraintEnd_toEndOf="@+id/countdownname"/>
    <TextView
            android:text="小时"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/countdown_days"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/countdown_hours" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/countdown_days"
            app:layout_constraintEnd_toEndOf="@+id/countdown_days"/>
    <TextView
            android:text="分钟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/countdown_hours"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/textView9"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/countdown_minutes" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/countdown_hours"
            app:layout_constraintEnd_toEndOf="@+id/countdown_hours"/>
    <TextView
            android:text="秒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/countdown_minutes"
            app:layout_constraintStart_toStartOf="@+id/textView10" app:layout_constraintEnd_toEndOf="@+id/textView10"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/countdown_seconds" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/countdown_minutes"
            app:layout_constraintEnd_toEndOf="@+id/countdown_minutes"/>
    <CheckBox
            android:text="重要"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_importantcountdown"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/countdownname" android:layout_marginStart="8dp"
    />
    <Button
            android:text="开始"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countdown_submit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.535" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
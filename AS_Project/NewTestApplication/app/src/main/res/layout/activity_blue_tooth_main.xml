<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BluetoothConnectionTest.BlueToothMainActivity">

    <Button
            android:text="I am a Client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clientbutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:background="#009688"
            android:layout_marginTop="172dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            android:onClick="onClientButtonClick"/>
    <Button
            android:text="I am a server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serverbutton" app:layout_constraintStart_toStartOf="@+id/clientbutton"
            app:layout_constraintEnd_toEndOf="@+id/clientbutton" android:background="#F44336" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/clientbutton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.31"
            android:onClick="onServerButtonClick"/>
    <Button
            android:text="Open BlueTooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_bluetooth"
            android:onClick="onOpenBTButtonClick" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>
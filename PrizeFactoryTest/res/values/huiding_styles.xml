<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme2" parent="@android:style/ThemeOverlay.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/indisplay_primary_color</item>
        <item name="android:colorPrimaryDark">@color/indisplay_primary_color</item>
        <item name="android:colorControlActivated">@color/indisplay_primary_color</item>
        <item name="android:colorControlHighlight">@color/indisplay_primary_color</item>
        <item name="android:colorControlNormal">@color/indisplay_primary_color</item>
    </style>
    <style name="AppTheme3" parent="@android:style/ThemeOverlay.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
        <item name="android:colorPrimary">@color/indisplay_primary_color</item>
        <item name="android:colorPrimaryDark">@color/indisplay_primary_color</item>
        <item name="android:colorControlActivated">@color/indisplay_primary_color</item>
        <item name="android:colorControlHighlight">@color/indisplay_primary_color</item>
        <item name="android:colorControlNormal">@color/indisplay_primary_color</item>
    </style>
    <!-- Base application theme. -->
    <style name="NumberProgressBar_Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="max">100</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#33b5e5</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">#33b5e5</item>
        <item name="progress_reached_bar_height">4.5dp</item>
        <item name="progress_unreached_bar_height">4.5dp</item>
    </style>

    <style name="textAppearanceLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/maintextcolor</item>
    </style>

    <style name="textAppearanceMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/maintextcolor</item>
    </style>

    <style name="textAppearanceSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/maintextcolor</item>
    </style>
    <style name="textAppearanceSmallFARR">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="buttonTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:textAppearance">@style/buttonTextAppearance</item>
        <item name="android:background">@drawable/entry_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="show_exposure_msg_title_style" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="show_exposure_msg_style" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <color name="maintextcolor">#000000</color>
</resources>

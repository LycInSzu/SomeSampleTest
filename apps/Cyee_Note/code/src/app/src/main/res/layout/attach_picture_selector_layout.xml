<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cydroid.note.app.view.AttachPicRecycleView
        android:id="@+id/pic_select_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/attach_selector_pic_height"
        android:layout_marginStart="14dip"
        android:layout_marginTop="20dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pic_select_cancel"
            style="@style/RippleEffect"
            android:layout_width="0dip"
            android:layout_height="56dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="@color/attachment_selector_dialog_grid_item_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pic_select_add"
            style="@style/RippleEffect"
            android:layout_width="0dip"
            android:layout_height="56dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_sure"
            android:textColor="@color/attachment_selector_dialog_grid_item_graded_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>

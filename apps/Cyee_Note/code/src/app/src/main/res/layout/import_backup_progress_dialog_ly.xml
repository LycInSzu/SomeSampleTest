<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cyee_confirm_dialog_id_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cyee_confirm_dialog_title_height"
        android:gravity="start|bottom"
        android:paddingBottom="@dimen/cyee_confirm_dialog_title_bottom_padding"
        android:paddingStart="@dimen/cyee_confirm_dialog_title_left_padding"
        android:text="@string/import_backup_progress_dialog_title"
        android:textColor="@color/system_stress_color"
        android:textSize="@dimen/cyee_confirm_dialog_title_text_size" />

    <TextView
        android:id="@+id/cyee_confirm_dialog_id_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/import_backup_progress_dialog_message_left_padding"
        android:paddingEnd="@dimen/import_backup_progress_dialog_message_right_padding"
        android:paddingTop="@dimen/import_backup_progress_dialog_message_top_padding"
        android:text="@string/import_backup_progress_dialog_message"
        android:textColor="@color/cyee_confirm_dialog_message_text_color"
        android:textSize="@dimen/cyee_confirm_dialog_message_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/import_backup_progress_dialog_checkbox_bottom_margin"
        android:layout_marginStart="@dimen/import_backup_progress_dialog_checkbox_left_margin"
        android:layout_marginEnd="@dimen/import_backup_progress_dialog_checkbox_right_margin"
        android:layout_marginTop="@dimen/import_backup_progress_dialog_checkbox_top_margin">

        <TextView
            android:id="@+id/import_backup_dialog_progress_message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/cyee_determinate_progress_dialog_button_number_left_margin"
            android:textColor="@color/cyee_determinate_progress_dialog_message_text_color"
            android:textSize="@dimen/cyee_determinate_progress_dialog_message_text_size" />

        <ProgressBar
            android:id="@+id/import_backup_dialog_progress_bar_id"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/import_backup_dialog_progress_message_id"
            android:progressBackgroundTint="@color/cyee_determinate_progress_background_color"
            android:progressTint="@color/system_stress_color" />
    </RelativeLayout>

</LinearLayout>

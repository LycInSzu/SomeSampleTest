<?xml version="1.0" encoding="utf-8"?>
<com.cydroid.note.app.view.WebLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/webview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cydroid.note.web.NoteWebView
        android:id="@+id/web_show_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:id="@+id/web_load_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.cydroid.note.app.view.WebLayout>
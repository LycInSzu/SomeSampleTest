<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prize_setting_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/prize_setting_actionbar_height">

        <ImageButton
            android:id="@+id/plugin_mode_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/prize_setting_ic_back" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/plugin_mode_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

</RelativeLayout>
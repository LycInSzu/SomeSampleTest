<com.android.launcher3.views.PrizeRadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
<!--prize modified by liyuchong, change layout to support LTR ,20190325-begin-->
    <!-- 首页 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_shadow_color_no_alpha"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:text="@string/drawer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_style_drawer" />

        </LinearLayout>


        <RadioButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="center_horizontal"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/drawer"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <!-- 历史 -->



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@color/default_shadow_color_no_alpha"
                android:textSize="15dp"
                android:text="@string/standard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_style_title" />

        </LinearLayout>


        <RadioButton
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="bottom"/>

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/standar"
            android:layout_marginTop="10dp"

            android:layout_gravity="bottom"
            android:layout_height="wrap_content" />
    </FrameLayout>
<!--prize modified by liyuchong, change layout to support LTR ,20190325-end-->
</com.android.launcher3.views.PrizeRadioGroup>